{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "moduleResolution": "node",
        "outDir": "./dist/out-tsc",
        "paths": {
            "core-js/es7/reflect": ["../node_modules/core-js/proposals/reflect-metadata"]
        },
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "compileOnSave": false
}
